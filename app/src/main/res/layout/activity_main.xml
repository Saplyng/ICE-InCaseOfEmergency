<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Evil, Injustice"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/editText2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:gravity="center"/>
    <TextView
            android:text="Dr. Angela Zeigler"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/editText3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.142"
            android:textSize="24sp" android:id="@+id/textView"/>
    <EditText
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Medicines"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.802"/>
    <EditText
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Allergies"
            android:ems="10"
            tools:layout_editor_absoluteX="82dp" android:id="@+id/editText2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Doctors"
            android:ems="10"
            tools:layout_editor_absoluteX="82dp" android:id="@+id/editText3" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <TextView
            android:text="Morphine, Super Soldier Serum"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:gravity="center"/>

</android.support.constraint.ConstraintLayout>